{
  "name": "kisaan-backend-node",
  "version": "1.0.0",
  "description": "KisaanCenter Backend API",
  "main": "dist/src/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "dev:local": "dotenv -e .env.local ts-node src/server.ts",
    "build": "tsc",
    "test": "jest --runInBand",
    "start": "node dist/src/server.js",
    "migrate": "ts-node scripts/run-migration.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "schema:init": "node schema/schema-manager.js init",
    "schema:init:local": "dotenv -e .env.local node schema/schema-manager.js init",
    "schema:validate": "node schema/schema-manager.js validate",
    "schema:reset": "node schema/schema-manager.js reset",
    "schema:prepare": "node schema/schema-manager.js prepare",
    "db:setup": "npm run schema:init",
    "db:setup:local": "npm run schema:init:local",
    "db:setup:sqlite": "ts-node scripts/setup-sqlite.ts",
    "db:bootstrap": "ts-node scripts/db-bootstrap.ts --minimal-seed",
    "db:bootstrap:local": "dotenv -e .env.local ts-node scripts/db-bootstrap.ts --minimal-seed",
    "db:bootstrap:full": "ts-node scripts/db-bootstrap.ts --full-seed",
    "db:bootstrap:prod": "node dist/scripts/db-bootstrap.js --minimal-seed",
    "db:check": "ts-node scripts/db-connection-check.ts",
    "db:check:local": "dotenv -e .env.local ts-node scripts/db-connection-check.ts",
    "db:ledger:ensure": "ts-node scripts/create-missing-ledger-tables.ts",
    "validate:errors": "ts-node scripts/verifyErrorCodes.ts",
    "validate:sql": "ts-node scripts/auditRawSql.ts",
    "validate": "npm run validate:errors && npm run validate:sql",
    "features:seed": "ts-node scripts/seed-features.ts",
    "cleanup:deprecated": "powershell -ExecutionPolicy Bypass -File scripts/remove-deprecated-scripts.ps1",
    "schema:structure": "ts-node scripts/verify-schema-structure.ts",
    "migrate:transactions:rename": "ts-node scripts/migrate-transactions-rename-columns.ts",
    "seed:core": "ts-node scripts/seed-core.ts"
  },
  "dependencies": {
    "@types/sequelize": "^4.28.20",
    "@types/yup": "^0.29.14",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "yup": "^1.7.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/pdfkit": "^0.17.3",
    "@types/pg": "^8.10.9",
    "@types/pino": "^7.0.4",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "axios": "^1.12.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
