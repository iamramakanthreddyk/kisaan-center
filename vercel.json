{
  "version": 2,
  "public": true,
  "buildCommand": "cd kisaan-frontend && npm run build",
  "outputDirectory": "kisaan-frontend/dist",
  "env": {
    "VITE_API_BASE_URL": "@vite_api_base_url"
  },
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "https://kisaan-center-production.up.railway.app/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "^/assets/.*$",
      "dest": "/assets/:splat"
    },
    {
      "src": "^/(?:favicon\\.ico|robots\\.txt|sitemap\\.xml)$",
      "status": 404
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ]
}





